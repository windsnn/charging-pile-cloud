<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.trick.wallet.mapper.WalletMapper">
    <update id="updateBalance">
        update user
        set balance = balance + #{amount}
        where id = #{id}
    </update>

    <select id="getWallet" resultType="java.math.BigDecimal">
        select balance
        from user
        where id = #{id}
            for
        update
    </select>
</mapper>